function sourcefile(){
	source $1
	echo "sourced '$1' file"
}
function editandsource(){
	nvim $1
	sourcefile $1
}
alias esfile="editandsource"
function salias(){
	sourcefile ~/.bashaliasrc
}

function ebash(){
	editandsource ~/.bashrc
}
function evim(){
	nvim ~/.vimrc
}
function envim(){
  nvimfolder ~/.config/nvim
}
function ei3(){
  nvim ~/.config/i3/config
}
function nvimfolder(){
  DIRECTORY=$(pwd)
  cd $1
  nvim
  cd $DIRECTORY
}
function sbash(){
	sourcefile ~/.bashrc
}

function ealias(){
	editandsource $DOTFILES_PATH/.bashaliasrc
}

